celsius_to_farenheit := proc (celsius : float) float {

    return celsius * 1.8 + 32.;
};

celsius_to_kelvin := proc (celsius : float) float {

    return celsius + 273.15;
};

farenheit_to_celsius := proc (farenheit : float) float {

    return (farenheit - 32.) * (5. / 9.);
};

farenheit_to_kelvin := proc (farenheit : float) float {

    return (farenheit + 459.67) * (5. / 9.);
};

